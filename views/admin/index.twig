{% extends 'main.twig' %} 

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">

                <div class="box box-warning">
                    <div class="box-header with-border">
                        <h3 class="box-title"><b>Books</b></h3>
                        <div class="box-tools pull-right">
                            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="box-body">
                        <table class="table no-margin main_url_list">
                            <thead>
                                <tr class="links_navigation">
                                    <th>ID</th>
                                    <th>Book name</th>
                                    <th>Author</th>
                                    <th>Added</th>
                                    <th>Controls</th>
                                </tr>
                            </thead>
                            <tbody> 
                                
                                {% for key,value in books %}
                                    <tr>
                                        <td>{{books[key]['id']}}</td>
                                        <td>{{books[key]['name']}}</td>
                                        <td>{{books[key]['author']['name']}} {{books[key]['author']['surname']}}</td>
                                        <td>{{books[key]['added']}}</td> 
                                        <td></td> 
                                    </tr>
                                {% endfor %}
                               
                            </tbody>
                        </table>
                    </div>
                </div>
                
            </div>        
        </div>
    </section>  
{% endblock %}
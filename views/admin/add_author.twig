{% extends 'main.twig' %} 

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-md-6">

                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"><b>Add new author</b></h3>
                        <div class="box-tools pull-right">
                            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <div class="edit_lang_info_container">
                        </div>
                        <form class="edit_language" data-lang="texts" method="Post">

                            <input value="" name="author_id" type="hidden" class="form-control" autocomplete="off" autocapitalize="off">
                            
                            <div class="form-group">
                                <label>Name</label>
                                <input required value="" name="author_name" type="text" class="form-control" autocomplete="off" autocapitalize="off">
                            </div>
                            
                            <div class="form-group">
                                <label>Surname</label>
                                <input required value="" name="author_surname" type="text" class="form-control" autocomplete="off" autocapitalize="off">
                            </div>
                            
                            <div class="form-group">
                                <label>Birth date</label>
                                <input required value="" name="author_birthday" type="text" class="form-control author_birthday datepicker" autocomplete="off" autocapitalize="off">
                            </div>

                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary save_author">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
                
            </div>        
        </div>
    </section>   
{% endblock %}